    <link rel="apple-touch-icon" sizes="180x180"
        href="https://ik.imagekit.io/wlalafg7g/GoalPostAgain/logo.png?updatedAt=1700484789437">
    <link rel="icon" type="image/png" sizes="192x192"
        href="https://ik.imagekit.io/wlalafg7g/GoalPostAgain/logo.png?updatedAt=1700484789437">
    <link rel="icon" type="image/png" sizes="512x512"
        href="https://ik.imagekit.io/wlalafg7g/GoalPostAgain/logo.png?updatedAt=1700484789437">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/main.css" rel="stylesheet">
    <link href="/gamezone.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Hi+Melody&family=Noto+Sans+KR:wght@200;300;400;500;600&display=swap"
        rel="stylesheet">
    <script src="/main.js"></script>
    <script>
        function GameStart() {
            var gamezoneArea = document.getElementById('gamezone-area');
            gamezoneArea.style.display = 'block';
            var gamezoneStartButton = document.getElementById('gamezone-start-button');
            gamezoneStartButton.style.display = 'none';
        }

        function shoot() {
            var shoot_left = document.getElementById('goalpost-left');
            var shoot_center = document.getElementById('goalpost-center');
            var shoot_right = document.getElementById('goalpost-right');

            var goalpost_left = document.getElementById('goalpost-left');
            var shoot_center = document.getElementById('goalpost-center');
            var shoot_right = document.getElementById('goalpost-right');

            if (shoot_left) {
                shoot_left.addEventListener('click', function () {
                    shoot_left.style.backgroundColor = "green";
                });
            }

            if (shoot_center) {
                shoot_center.addEventListener('click', function () {
                    shoot_center.style.backgroundColor = "green";
                });
            }

            if (shoot_right) {
                shoot_right.addEventListener('click', function () {
                    shoot_right.style.backgroundColor = "green";
                });
            }


        }
    </script>

</head>

<body>
    <%- include('nav.ejs') %>

        <div class="gamezone-main">
            <button id="gamezone-start-button" class="gamezone-start-button" onclick="GameStart()">시작하기</button>
            <div id="gamezone-area" class="gamezone-area">
                <div class="gaolpost-area">
                    <div class="goalpost">
                        <div id="goalpost-left" class="goalpost-left"></div>
                        <div id="goalpost-center" class="goalpost-center"></div>
                        <div id="goalpost-right" class="goalpost-right"></div>
                    </div>
                </div>
                <div class="shoot-way-bt-area">
                    <div onclick="shoot()" id="shoot-way-bt-left" class="shoot-way-bt">왼쪽</div>
                    <div onclick="shoot()" id="shoot-way-bt-center" class="shoot-way-bt">중앙</div>
                    <div onclick="shoot()" id="shoot-way-bt-right" class="shoot-way-bt">오른쪽</div>
                </div>
                <div class="gamezone-scorearea">골 : 0</div>
            </div>
        </div>
</body>

</html>