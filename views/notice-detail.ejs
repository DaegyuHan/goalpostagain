    <%- include('nav.ejs') %>

        <div class="whole-white-main">
            <div class="detail-bg">
                <h4 class="detail-title">
                    <%= 글.title%>
                </h4>
                <div class="detail-userinfo">
                    <span>
                        <%=글.username%>
                    </span>
                    <span>
                        <%=글.time%>
                    </span>
                </div>

                <hr>

                <div style="margin: 20px auto 10px auto; overflow: hidden;">
                    <div class="image-container">
                        <% if (글.img != null) {%>

                            
                        <% for ( i=0; i< 글.img.length; i++) {%>
                                <img class="detail-img" src="<%= 글.img[i].location%>">
                            <%}%>
                            <%}%>
                            
                    </div>
                    <div class="detail-content" style="overflow-y: hidden; white-space: pre-wrap;">
<%= 글.content%>
                    </div>
                </div>


                <% if (유저==글.username || 유저=='관리자' ) {%>
                    <div style="text-align: right; font-size: 14px;">
                        <a href="/notice-edit/<%= 글._id%>">수정</a>
                        <a href="#" class="delete-notice-button" data-notice-id="<%= 글._id%>"
